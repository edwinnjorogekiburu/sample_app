<% provide(:title, 'Sent Items') %>
 
<div class='row'>      
            <aside class="span4">
                  <section>
                    <%= render 'shared/user_info' %>
                  </section>
                  <section>
                    <%= render 'shared/stats' %>
                  </section>
                  <section> 
                  <%= render 'message_menu' %>
                  </section>
            </aside>
<div class='span8'>
<h2>Message &raquo; <%= yield(:title) %></h2>

<%= will_paginate @sent_messages %>
<ul class="messages">
	<% for sent_message in @sent_messages %>
	<li>
      <%= link_to gravatar_for(sent_message.reciepient), sent_message.reciepient %>
      <div class="name">
      <%= sent_message.reciepient.name %>
      </div>
      <span class="subject">
      <%= sent_message.subject %> 
      </span>
      &raquo;
      <span class="message_content">
      <%= sent_message.message %>
      </span>
      <div class="timestamp">
      Sent <%= time_ago_in_words(sent_message.created_at) %> ago
      </div>
   </li>
   <% end %>
</ul>
<%= will_paginate @sent_messages %>
</div>
</div>