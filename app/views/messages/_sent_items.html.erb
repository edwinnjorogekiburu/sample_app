<div class='row'>
            <h2>Messages &raquo; Sent Items</h2>
<aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
      <%= render 'message_menu' %>
      </section>
</aside>
            <div class='span8'>    
            <ul class="messages">
            <% for sent_message in @sent_messages %>
            <li>
            <%= link_to gravatar_for(sent_message.reciepient), sent_message.reciepient %>
            <div class="name">
            <%= sent_message.reciepient.name %>
            </div>
            <span class="subject">
            <%= sent_message.subject %> 
            </span>
            &raquo;
            <span class="message_content">
            <%= sent_message.message %>
            </span>
            <div class="timestamp">
            Sent <%= time_ago_in_words(sent_message.created_at) %> ago
            </div>
            <span class="message_options">
             <%= link_to "Send #{sent_message.reciepient.name} a message" , user_path(sent_message.reciepient) %>  |  
             <%= link_to "Delete" , sent_message, method: :delete,
                                           data: { confirm: "You sure?" }%>
            </span>    
            </li>
            <% end %>
            </ul>
        </div>
        </div>