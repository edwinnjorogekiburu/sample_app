<% provide(:title, 'Messages') %>

<div class='row'>
<aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
                  <%= render 'message_menu' %>
      </section>
</aside>
<div class='span8'>
<ul class="nav nav-tabs" data-tabs="tabs">
    <li class="active"><a data-toggle="tab" href="#inbox">Inbox</a></li>
    <li><a data-toggle="tab" href="#sent">Sent Items</a></li>
</ul>
<div id="my-tab-content" class="tab-content">
        <div class="tab-pane active" id="inbox">
            <%= render :partial=>"inbox" , :locals => { :recieved_messages => @recieved_messages }%>
        </div>
        <div class="tab-pane" id="sent">
            <%= render :partial=>"sent_items" , :locals => { :sent_messages => @sent_messages }%>
        </div>
       
</div>
</div>
</div>
