<% unless current_user?(@user) %>
  <div id="follow_form">
  <% if current_user.following?(@user) %>
    <%= render 'shared/unfollow' %>
  <% else %>
    <%= render 'shared/follow' %>
  <% end %>
 <p>
  <%= link_to "Send a Direct Message to #{@user.name}" , new_message_path(:id => @user.id) %>
  </p>
  </div>
<% end %>